    <name>Seldon Server</name>
    <packaging>${project.packaging}</packaging>

    <properties>
        <spring.version>4.1.0.RELEASE</spring.version>
        <curator.version>2.7.1</curator.version>
        <project.packaging>war</project.packaging>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <exclude.tests>no-exclusions</exclude.tests>
        <config.version>local</config.version>
    </properties>

    <build>
        <!-- Custom source directory (move to conventional layout in phase 2) -->
        <sourceDirectory>src</sourceDirectory>
        <testSourceDirectory>test/main</testSourceDirectory>
        <testResources>
            <testResource>
                <directory>
                    ${project.basedir}/test/resources
                </directory>
            </testResource>
        </testResources>

        <resources>
            <resource>
                <directory>${project.basedir}/resources/common</directory>
            </resource>
            <resource>
                <directory>${project.basedir}/src</directory>
                <includes>
                    <include>**/*.orm</include>
                    <include>**/*.jdo</include>
                </includes>
            </resource>
        </resources>

        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <version>2.12.3</version>
                    <configuration>
                        <excludes>
                            <exclude>${exclude.tests}</exclude>
                        </excludes>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.eclipse.m2e</groupId>
                    <artifactId>lifecycle-mapping</artifactId>
                    <!--suppress MavenModelInspection (suppresses error in IDEA) -->
                    <version>1.0.0</version>
                    <configuration>
                        <lifecycleMappingMetadata>
                            <pluginExecutions>
                                <pluginExecution>
                                    <pluginExecutionFilter>
                                        <groupId>org.datanucleus</groupId>
                                        <artifactId>maven-datanucleus-plugin</artifactId>
                                        <versionRange>4.0.0</versionRange>
                                        <goals>
                                            <goal>enhance</goal>
                                        </goals>
                                    </pluginExecutionFilter>
                                    <action>
                                        <execute>
                                            <runOnIncremental>false</runOnIncremental>
                                        </execute>
                                    </action>
                                </pluginExecution>
                            </pluginExecutions>
                        </lifecycleMappingMetadata>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.5.1</version>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.2</version>
                <configuration>
                    <!-- Custom WEB-INF location (move to conventional layout in phase 2) -->
                    <webXml>${project.basedir}/WebContent/WEB-INF/web.xml</webXml>
                    <webResources>
                        <!-- Copy WEB-INF resources into WAR (should be deprecated in phase 2) -->
                        <resource>
                            <directory>${project.basedir}/WebContent/WEB-INF</directory>
                            <includes>
                                <include>**/*</include>
                            </includes>
                            <targetPath>WEB-INF</targetPath>
                        </resource>
                        <!-- Copy context and manifest into WAR (should be deprecated in phase 2) -->
                        <resource>
                            <directory>${project.basedir}/WebContent/META-INF</directory>
                            <includes>
                                <include>*</include>
                            </includes>
                            <targetPath>META-INF</targetPath>
                        </resource>
                    </webResources>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.datanucleus</groupId>
                <artifactId>datanucleus-maven-plugin</artifactId>
                <version>4.0.0-release</version>
                <configuration>
                    <api>JDO</api>
                    <metadataIncludes>
                        **/package.jdo,**/*.class
                    </metadataIncludes>
                    <props>${basedir}/resources/common/datanucleus.properties</props>
                    <log4jConfiguration>${basedir}/resources/common/datanucleus_log4j.properties</log4jConfiguration>
                    <metadataDirectory>
                        ${project.basedir}/src
                    </metadataDirectory>
                </configuration>
                <executions>
                    <execution>
                        <phase>process-classes</phase>
                        <goals>
                            <goal>enhance</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>

